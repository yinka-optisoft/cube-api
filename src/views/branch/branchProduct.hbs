{{/extend}}


<div class="col-md-12 col-sm-12 col-xs-12">
    
    <div class="x_panel">
        <div class="x_title">
        <h2>{{branch.name}} All Products </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            <ul class="dropdown-menu" role="menu">
                <li><a href="#">Settings 1</a>
                </li>
                <li><a href="#">Settings 2</a>
                </li>
            </ul>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
        </div>
        <div class="x_content">

        <table id="datatable" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>S/N</th>
                <th>Name</th>
                <th>Category</th>
                <th>Total Pieces</th>
                {{!-- <th>Actions</th> --}}
            </tr>
            </thead>


            <tbody>
                {{#each products}}
            <tr>
                <td>{{inc @index}}</td>
                <td>{{_productId.productName}}</td>
                <td>{{_productId._categoryId.name}}</td>
                <td>{{pieces}}</td>
                {{!-- <td>
                    <a href="/branch/user/view/{{_id}}" class="btn btn-success btn-sm"><i class="fa fa-eye"></i></a>

                    {{#if (eq status true)}}
                    <button onclick="banMember(this.value)" value="{{_id}}" class="btn btn-danger btn-sm">Di-activate</i></button>
                    {{else}}
                    <button onclick="banMember(this.value)" value="{{_id}}" class="btn btn-info btn-sm">activate</button>
                    {{/if}}
                </td> --}}
            </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>
</div>




