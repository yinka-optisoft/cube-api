<script>

    $( function() {
        $( "#dateBet" ).datepicker();
        $( "#dateTill" ).datepicker();
    });

    $(document).ready(function() {
        $("#reportForm").submit(function(e) {
            e.preventDefault();
            var branchId = $("#branchId option:selected").val();
            var dateBet = $('#dateBet').val();
            var dateTill = $('#dateTill').val();

            //console.log(branchId);
            //console.log(dateBet);
            //console.log(dateTill);

            $.ajax({
                type: 'POST',
                url: '/report/get/product',
                dataType: 'json',
                data: {branchId: branchId, dateBet: dateBet, dateTill: dateTill },
                success: function(data) {

                  console.log(data);

                    if ( $.fn.DataTable.isDataTable('#datatable') ) {
                        $('#datatable').DataTable().destroy();
                    }

                    $('#datatable tbody').empty();

                    for(var i = 0; i < data.length; i++){

                            var tr = '<tr>'+
                                '<td>'+(i + 1)+'</td>'+
                                '<td>'+data[i]._productId.productName+'</td>'+
                                '<td>'+data[i].pieces+'</td>'+
                                '<td>'+data[i]._productId.sellingPrice+'</td>'+
                                '<td>'+data[i]._productId._categoryId.name+'</td>'+
                            '</tr>'

                            $('#reportTable').append(tr);
                            $('#reportModal').modal('hide');
                    }

                    $('#reportModal').modal('hide');

                    $('#datatable').dataTable({
                        "autoWidth":false
                        , "info":false
                        , "JQueryUI":true
                        , "ordering":true
                        , "paging":true
                        //, "scrollY":"500px"
                        , "scrollCollapse":false
                    });

                }
            });
        });
    });

</script>

{{/extend}}